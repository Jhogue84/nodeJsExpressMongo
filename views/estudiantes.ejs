<%- include("templates/header", {title: "Estudiantes"}) %>
    <div class="container">
        <h1>Estudiantes</h1>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Item</th>
                <th scope="col">Nombres</th>
                <th scope="col">Apellidos</th>
                <th scope="col">Edad</th>
                <th scope="col">Clase</th>
                <th scope="col">Acciones</th>
              </tr>
            </thead>
            <tbody>
                <% if (arrayEstudiantes.length > 0) { %>
                    <% arrayEstudiantes.forEach(estudiante => { %>
                        <tr>
                            <th scope="row"><%= arrayEstudiantes.indexOf(estudiante)+1 %></th>
                            <td><%= estudiante.nombres %></td>
                            <td><%= estudiante.apellidos %></td>
                            <td><%= estudiante.edad %></td>
                            <td><%= estudiante.curso %></td>
                            <td><input type="button" value="Modificar" /><input type="button" value="Eliminar" /></td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
          </table>
    </div>

<%- include("templates/footer") %>